    <p style="color:green"><%- messages.success %></p>
<% } %>


<style>
        .container{  
               text-align: center;
               text-justify: auto;
               margin: 0 auto;
               padding-top:40px;
               }

          .btn-primary {
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    margin: 10px;
    }         
        </style> 
        <div class="container">
                <form action="/reb/eligible/editeligibility/<%- id %>" method="post" name="form4">
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="requirement">Requirement:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="requirement" id="requirement" value="<%- requirement %>"/>
                  </div>
                  </div>
        
        
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="eligibility_type">Elegibility-Type:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="eligibility_type" id="eligibility_type" value="<%- eligibility_type %>"/>
                  </div>
                 </div>
        
        
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="value">Value:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="value" id="value" value="<%- value %>"/>
                  </div>
                  </div>
        
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="unit">Unit:</label>
