<!--
including header content which is common for all pages
-->
      <%- include ../../adminlayouts/header.ejs %>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
          Edit Exam
        </h1>

    </section>
    <div class="col-md-8">

      <form class="form-horizontal" action="/admin/exam/edit_exams?id=<%= locals.data.mydata[0].id %>" method="post" name="form2">
          <div class="form-group" id="myid">
              <label class="control-label col-sm-2" for="class_id">Exam Type:</label>
              <div class="col-sm-10">
              <select class="form-control" name="edit_exam_type" id="mid">
                <option value=""> Choose Exam Type</option>
                  <% if (locals.data.editexam) {%>
                  <% locals.data.editexam.forEach(function(cl){%>
              <option value="<%= cl.id %>"><%= cl.exam_type %></option>
              
                  <% }) %>
                  <% } %>
           
                </select>
              
              </div>
            </div>
               <% if (locals.data.mydata) {%>
                <% locals.data.mydata.forEach(function(cl){%>
            <div class="form-group">
              <label class="control-label col-sm-2" for="exam_name">Exam Name:</label>
              <div class="col-sm-10">
              
              <input type="text" class="form-control" name="edit_exam_name" value="<%= cl.exam_name %>"/>
            </div>
           </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="exam_desc">Exam Description:</label>
              <div class="col-sm-10">
              <textarea class="form-control" name="edit_exam_desc"><%= cl.exam_decription %></textarea>
           </div>
              </div>
               <div class="form-group">
              <label class="control-label col-sm-2" for="eligib_crit">Eligibility Criteria:</label>
              <div class="col-sm-10">
                 
                 <textarea class="form-control" name="edit_eligib_crit"><%= cl.eligibility %></textarea>
               </div>
              </div>
              <div class="form-group">
              <label class="control-label col-sm-2" for="exam_apply">How To Apply:</label>
              <div class="col-sm-10">

                <textarea class="form-control" name="edit_exam_apply"><%=cl.how_to_apply %></textarea>

                
             
              </div>
              </div>
               <div class="form-group">
              <label class="control-label col-sm-2" for="exam_prep">Preparation Tips:</label>
              <div class="col-sm-10">
                  <textarea class="form-control" name="edit_exam_prep"><%= cl.exam_preparation %></textarea>
              </div>
              </div>
               <% }) %>
                  <% } %>
           
            <button type="submit" class="btn btn-primary pull-right">Save Changes</button>
          </form>

    </div>
  </div>



<!--
including footer content which is common for all pages
-->
<%- include ../../adminlayouts/footer.ejs %>
<script>


$('#mid').val('<%= locals.data.mydata[0].exam_type_id %>');
</script>  