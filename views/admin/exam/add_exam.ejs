      <%- include ../../adminlayouts/header.ejs %>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
          Add Exam
        </h1>

    </section>
    <div class="col-md-8">


      <% if (messages.error) { %>
          <p style="color:red"><%- messages.error %></p>
      <% } %>

      <% if (messages.success) { %>
          <p style="color:green"><%- messages.success %></p>
      <% } %>

      <form class="form-horizontal" action="/admin/exam/addexam" method="post" name="form2">
          <div class="form-group" id="myid">
              <label class="control-label col-sm-2" for="class_id">Exam Type:</label>
              <div class="col-sm-10">
              <select class="form-control" name="exam_type">
                <option value=""> Choose Exam Type</option>
                  <% if (locals.data) {
                      %>
                  <% locals.data.forEach(function(cl){
                      %>
                <option value="<%= cl.id %>"><%= cl.exam_type %></option>
              
                  <% }) %>
                  <% } %>
           
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-sm-2" for="exam_name">Exam Name:</label>
              <div class="col-sm-10">
              <input type="text" class="form-control" name="exam_name" value=""/>
            </div>
           </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="exam_desc">Exam Description:</label>
              <div class="col-sm-10">
              <textarea class="form-control" name="exam_desc"></textarea>
           </div>
              </div>
               <div class="form-group">
              <label class="control-label col-sm-2" for="eligib_crit">Eligibility Criteria:</label>
              <div class="col-sm-10">
                 <input type="text" class="form-control" name="eligib_crit" value=""/>
             
           </div>
              </div>
              <div class="form-group">
              <label class="control-label col-sm-2" for="exam_apply">How To Apply:</label>
              <div class="col-sm-10">
                 <input type="text" class="form-control" name="exam_apply" value=""/>
             
           </div>
              </div>
               <div class="form-group">
              <label class="control-label col-sm-2" for="exam_prep">Preparation Tips:</label>
              <div class="col-sm-10">
                  <textarea class="form-control" name="exam_prep"></textarea>
           </div>
              </div>
            <button type="submit" class="btn btn-primary pull-right">Add</button>
          </form>

    </div>
  </div>



