$(document).on('change','#subject_id',function(){
  var html = '';
  $.get('/admin/topic/show_topic?id='+$(this).val() + '&vid='+$('#class_id').val(),function(res){
    $.each(res,function(key,val){
      html += '<tr id="topic_delete'+val.id+'"><td>'+val.topic_name+'</td><td>'+val.description+'</td><td><button class="btn btn-info dlsub" data-id="'+val.id+'">Delete</td></tr>';
    })
      $('#subject_list').html(html)
  })
})
$(document).on('click','.dlsub',function(){
  var x = confirm("Are You Sure!!");
  if(x == true){
  var a =$(this)
  $.get('/admin/topic/delete?id='+$(this).data('id'),function(res){
    alert(res.message)
    if(res.success == 1){
    $('#topic_delete'+a.data('id')).remove()
    }

  },'json')
  }else{

 return false; 
}
})
