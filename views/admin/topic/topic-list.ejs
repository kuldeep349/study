<%- include ../../adminlayouts/header.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Topics Management
     
    </h1>
   
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header with-border">
           
          </div>
          <!-- /.box-header -->
          <!-- form start -->
         
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Choose Class</label>
                <select class="form-control" name="class_id" id="class_id">
                  <option disabled selected> Choose Class</option>
                  <% if (locals.data) {
                      %>
                  <% locals.data.forEach(function(cl){
                      %>
                  <option value="<%= cl.id %>"><%= cl.class_name %></option>
                  <% }) %>
                  <% } %>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Select Subject</label>
                <select class="form-control" name="subject_id" id="subject_id">

                </select>
              </div>
            
            </div>
         
       
        </div>
     



      

      </div>
   
      <!--/.col (right) -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
    <div class="box">
            <div class="box-body">
              <table class="table table-bordered">
                <thead>
                  <tr>
                   
                  <th>Topics</th>
                  <th>Topic Description</th>
                  <th style="width: 40px">Action</th>
                </tr>
              </thead>
              <tbody id="subject_list">
              </tbody>
            </table>
            </div>
          </div>
      </div>
    </div>
</div>
<!--
including footer content which is common for all pages
-->
<%- include ../../adminlayouts/footer.ejs %>
<script>
$(document).on('change','#class_id',function(){
  var html = '';
  $.get('/admin/topic/show_subject?id='+$(this).val(),function(res){
    $.each(res,function(key,val){
      html += '<option value="'+val.id+'">'+val.subject_name+'</option>';
    })
      $('#subject_id').html(html)
  },'json')
})

