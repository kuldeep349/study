<%- include ../../adminlayouts/header.ejs %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Add Study category
      </h1>
      <!-- <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
      </ol> -->
    </section>
    <div class="col-md-6">
    <div class="box box-primary">

     <% if (messages.error) { %>
         <p style="color:red"><%- messages.error %></p>
     <% } %>

     <% if (messages.success) { %>
         <p style="color:green"><%- messages.success %></p>
     <% } %>
            <!-- <div class="box-header with-border">
              <h3 class="box-title">Quick Example</h3>
            </div> -->
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" name="" action="/admin/category/add-category" method="post">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Category Name</label>
                  <input type="text" class="form-control" name="category_name" id="exampleInputEmail1" placeholder="Enter Category Name" required>
                </div>

                <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
    <!-- /.content -->
  </div>
  <div class="col-md-6">
      <ul class="list-group">

      <li href="#" class="list-group-item active">Study Sub categories</li>
      <% if (locals.data) {

          %>
      <% locals.data.forEach(function(cat){

          %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= cat.name %>
              <span class="badge badge-danger badge-pill" onClick="return confirm('Are you sure you want to delete?')"><a  href="/admin/category/remove_category/?id=<%= cat.id %>" >Delete</a></span>
          </li>
          <% }) %>
          <% } %>
    </ul>
  </div>
</div>



