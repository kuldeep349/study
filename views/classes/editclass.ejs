<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>    
        
<% if (messages.error) { %>
    <p style="color:red" "text-align:center"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green" "text-align:center"><%- messages.success %></p>
<% } %>

<style>
    .container{  
           text-align: center;
           text-justify: auto;
           margin: 0 auto;
           padding-top:40px;
           }
    .btn-primary {
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    margin: 10px;
    }    
    </style> 
    <div class="container">
            <form action="/reb/class/editclass/<%- id %>" method="post" name="form2">
        <div class="form-group">
            
            <label class="control-label col-sm-2" for="class_id">Class-Id:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="class_id"  value="<%- class_id %>"/>
          </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-2" for="class_name">Class Name:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="class_name" value="<%- class_name %>"/>
          </div>
         </div>

          <button type="submit" class="btn btn-primary">Edit</button>
          <input type="hidden" name="_method" value="PUT" />

        </form>
        </div>
 
