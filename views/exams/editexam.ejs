<%- include ../layouts/header.ejs %>    
        
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>


<style>
        .container{  
               text-align: center;
               text-justify: auto;
               margin: 0 auto;
               padding-top:40px;
               }
    .btn-primary {
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    margin: 10px;
    }    
        </style> 
        <div class="container">
                <form action="/reb/exam/editexam/<%- id %>" method="post" name="form5">
                    <div class="form-group">
                            <label class="control-label col-sm-2" for="exam_id">Exam-Id:</label>
                            <div class="col-sm-10">
                            <input type="text" class="form-control" name="exam_id" id="exam_id" value="<%- exam_id %>"/>
                          </div>
                        </div>
            
            
                          <div class="form-group">
                            <label class="control-label col-sm-2" for="exam_name">Exam Name:</label>
                            <div class="col-sm-10">
                            <input type="text" class="form-control" name="exam_name" id="exam_name" value="<%- exam_name %>"/>
                          </div>
                          </div>
            
            
                          <div class="form-group">
                                <label class="control-label col-sm-2" for="field">Field:</label>
                                <div class="col-sm-10">
                                <input type="text" class="form-control" name="field" id="field" value="<%-field %>"/>
                              </div>
                              </div>
            
            
                              <div class="form-group">
                                    <label class="control-label col-sm-2" for="stream">Stream:</label>
                                    <div class="col-sm-10">
                                    <input type="text" class="form-control" name="stream" id="stream" value="<%- stream %>"/>
                                  </div>
                                  </div>
                

    <button type="submit" class="btn btn-primary">Edit</button>
    
    <input type="hidden" name="_method" value="PUT" />
</form>
 </div>
