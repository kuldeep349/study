<%- include ../layouts/header.ejs %>    
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>


<style>
    form{  
           text-align: center;
           text-justify: auto;
           margin: 0 auto;
           padding-top:40px;
           }
    </style> 
    <div class="container">
    <form class="form-horizontal" action="/reb/eligible/addeligibility" method="post" name="form4">
        <div class="form-group">
            <label class="control-label col-sm-2" for="requirement">Requirement:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="requirement" id="requirement" value="<%- requirement %>"/>
          </div>
          </div>


          <div class="form-group">
            <label class="control-label col-sm-2" for="eligibility_type">Elegibility-Type:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="eligibility_type" id="eligibility_type" value="<%- eligibility_type %>"/>
          </div>
         </div>


          <div class="form-group">
            <label class="control-label col-sm-2" for="value">Value:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="value" id="value" value="<%- value %>"/>
          </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-2" for="unit">Unit:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="unit" id="unit" value="<%- unit %>"/>
          </div>
          </div>


          <div class="form-group">
                <label class="control-label col-sm-2" for="pursuing">Pursuing:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="pursuing" id="pursuing" value="<%- pursuing %>"/>
              </div>
             </div>

              <div class="form-group">
                    <label class="control-label col-sm-2" for="category">Category:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="category" id="category" value="<%- category %>"/>
                  </div>
                  </div>

                  <div class="form-group">
                        <label class="control-label col-sm-2" for="gender">Gender:</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" name="gender" id="gender" value="<%- gender %>"/>
                      </div>
                      </div>
                      
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
        </div>
 
