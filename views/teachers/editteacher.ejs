<%- include ../layouts/header.ejs %>    
        
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<style>
    .container{  
           text-align: center;
           text-justify: auto;
           margin: 0 auto;
           padding-top:40px;
           }
    .btn-primary {
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    margin: 10px;
    }         
    </style> 
    <div class="container">
        <form action="/reb/teacher/editteacher/<%- id %>" method="post" name="form3">
            <div class="form-group">
                    <label class="control-label col-sm-2" for="teacher_id">Teacher-Id:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="teacher_id" id="teacher_id" value="<%- teacher_id %>"/>
                  </div>
                  </div>
        
        
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="teacher_name">Teacher Name:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="teacher_name" id="teacher_name" value="<%- teacher_name %>"/>
                  </div>
                  </div>
        
        
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="teacher_role">Teacher Role:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="teacher_role" id="teacher_role" value="<%- teacher_role %>"/>
                  </div>
                  </div>
        
        
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="teacher_qualification">Teacher Qualification:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="teacher_qualification" id="teacher_qualification" value="<%- teacher_qualification %>"/>
                  </div>
                  </div>
            
          <button type="submit" class="btn btn-primary">Edit</button>
 
    <input type="hidden" name="_method" value="PUT" />
</form>
 </div>
